<resources>

    <style name="esk8_DayNight.Night.ToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="esk8_DayNight.Day.ToolBar" parent="esk8_DayNight.Night.ToolBar">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="esk8_DayNight.Night.NavBar" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@android:color/black</item>
        <item name="itemTextColor">@android:color/white</item>
        <item name="itemIconTint">@color/bottom_nav_color_dark</item>
        <item name="item"
        <item name="elevation">4dp</item>
    </style>

    <style name="esk8_DayNight.Day.NavBar" parent="esk8_DayNight.Night.NavBar">
        <item name="android:background">@android:color/white</item>
        <item name="itemTextColor">@android:color/black</item>
        <item name="itemIconTint">@color/bottom_nav_color_light</item>
    </style>

    <style name="esk8_DayNight.Day" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/esk8_DayNight.Day.ToolBar</item>
    </style>

    <style name="esk8_DayNight.Night" parent="esk8_DayNight.Day">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="toolbarStyle">@style/esk8_DayNight.Night.ToolBar</item>
    </style>

</resources>
